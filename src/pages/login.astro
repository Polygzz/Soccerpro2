---
// src/pages/login.astro
import { supabaseClient } from '../../utils/supabaseClient';
import { saveAuthCookies } from '../../utils/auth';
import { redirect } from 'astro:middleware';
import { cookies } from 'astro:server';

let errorMessage = '';

async function handleLogin(request) {
  const formData = await request.formData();
  const email = formData.get('email');
  const password = formData.get('password');

  const { data, error } = await supabaseClient.auth.signInWithPassword({
    email,
    password,
  });

  if (error) {
    console.error("Login error:", error.message);
    errorMessage = error.message;
    return;
  }

  if (data.session) {
    saveAuthCookies(cookies, data.session);
    // âœ… Redirect to dashboard after login
    throw redirect('/dashboard');
  } else {
    console.error("No session returned during login.");
    errorMessage = "No session returned.";
  }
}

if (Astro.request.method === 'POST') {
  await handleLogin(Astro.request);
}
---

<html>
  <head>
    <title>Login</title>
  </head>
  <body>
    <h1>Login</h1>
    {errorMessage && <p style="color:red">{errorMessage}</p>}
    <form method="POST">
      <input type="email" name="email" placeholder="Email" required />
      <input type="password" name="password" placeholder="Password" required />
      <button type="submit">Login</button>
    </form>
  </body>
</html>
