import Layout from '../layouts/Layout.astro';
import { supabaseClient } from '../utils/supabaseClient';
import { getCookie, setCookie, deleteCookie } from 'astro:cookies';
import { SITE_URL } from '../consts';
// import { redirect } from 'astro/dist/redirect/index.js';

const { authProviders } = Astro.props;

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const email = formData.get('email');
  const password = formData.get('password');

  if (!email || !password) {
    return new Response('Missing email or password', { status: 400 });
  }

  const { data, error } = await supabaseClient.auth.signInWithPassword({
    email,
    password,
  });

  if (error) {
    return new Response(error.message, { status: 400 });
  }

  const { access_token, refresh_token } = data.session;

  Astro.cookies.set('sb-access-token', access_token, {
    httpOnly: true,
    secure: true,
    sameSite: 'lax',
    path: '/',
  });
  Astro.cookies.set('sb-refresh-token', refresh_token, {
    httpOnly: true,
    secure: true,
    sameSite: 'lax',
    path: '/',
  });

  Astro.response.headers.set('Location', '/');
  return new Response(null, { status: 302 });
}
---

<Layout>
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8 text-center">Login</h1>

    <form id="loginForm" method="post" class="max-w-md mx-auto bg-boxColor shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <div class="mb-4">
        <label class="block text-textPrimary text-sm font-bold mb-2" for="email">
          Email
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" name="email" type="email" placeholder="Email" />
      </div>
      <div class="mb-6">
        <label class="block text-textPrimary text-sm font-bold mb-2" for="password">
          Password
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" name="password" type="password" placeholder="Password" />
      </div>
      <div class="flex items-center justify-between">
        <button class="bg-primary hover:bg-secondary text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
          Sign In
        </button>
        <a class="inline-block align-baseline font-bold text-sm text-primary hover:text-secondary" href="/register">
          Register
        </a>
      </div>
    </form>
  </main>
</Layout>
